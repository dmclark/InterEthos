<% @title = 'New Collection' %>

<% form_for(@collection) do |f| %>
  <%= f.error_messages %>

  <p><%= f.label :name %><br />
    <%= f.text_field :name %></p>
	
  <p><%= f.label :organization %><br />
    <%= f.text_field :organization %></p>
  
  <p><%= f.label :status %><br />
	<%= f.select("status", %w[Active OffLine Unavailable], {}, {}) %></p>

  <p><%= f.label :contact_info %><br />
    <%= f.text_area :contact_info, :cols => 50, :rows => 3 %></p>
  
  <p><%= f.label :notes %><br />
    <%= f.text_area :notes, :cols => 50, :rows => 3 %></p>
	
  <p><%= f.submit 'Create' %></p>

<% end %>

<%= link_to 'Back', collections_path %>
