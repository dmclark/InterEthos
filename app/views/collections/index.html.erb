<% @title = 'Collections' %>

<table>
  <tr>
    <th>Name</th>
    <th>Status</th>
  </tr>

<% @collections.each do |collection| %>
  <tr>
    <td><%=h collection.name %></td>
    <td><%=h collection.status %></td>
    <td><%= link_to '<img src="/images/eye.jpg" border="0">', collection if permitted_to? :show, collection %></td>
    <td><%= link_to '<img src="/images/delta.jpg" border="0">', edit_collection_path(collection) if permitted_to? :edit, collection%></td>
    <td><%= link_to '<img src="/images/remove.jpg" border="0">', collection if permitted_to? :delete, collection, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New collection', new_collection_path if permitted_to? :create, :collections %>