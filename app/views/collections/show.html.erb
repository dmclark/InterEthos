<% @title = 'Collection' %>

<p><b>Name:</b>
  <%=h @collection.name %></p>

<p><b>Organization:</b>
  <%=h @collection.organization %></p>

<p><b>Status:</b>
  <%=h @collection.status %></p>

<p><b>Privacy:</b>
  <%=h @collection.privacy %></p>
	
<p><b>Meta information</b>
  <%=h @collection.meta %></p>

<p><b>URL for a descriptive overview about the Taxonomy</b>
  <%=h @collection.url_about %></p>

<p><b>Notes:</b>
  <%=h @collection.notes %></p>

<p><b>Contact Info:</b>
  <%=h @collection.contact_info %></p>
  
<p>
  <b>Categories:</b>
  <% if @collection.categories(@collection).empty? %>
	  <em>(none found)</em>
  <% else %>
	  <ul>
		<% for taxonomy in @collection.categories %>
		  <li><%=h taxonomy.name %> 
		  <%= link_to '<img src="/images/eye.jpg" border="0">'.html_safe, collection_path if permitted_to? :show, taxonomy %>
    	  <%= link_to '<img src="/images/delta.jpg" border="0">'.html_safe, edit_collection_path(@collection) if permitted_to? :edit, taxonomy %>
		  <%= link_to '<img src="/images/remove.jpg" border="0">'.html_safe, collection_path(taxonomy.id) if permitted_to? :delete, taxonomy, :confirm => 'Are you sure?', :method => :delete %></li>
		<% end %>
	  </ul>
  <% end %>

  <%= indent.html_safe %><%= link_to '<img src="/images/add.jpg" border="0">'.html_safe, new_collection_path(:collection_id => @collection.id) if permitted_to? :create, :collections %>
</p>

<p>
	<%= link_to 'Edit', edit_collection_path(@collection) if permitted_to? :edit, :collections %> |
	<%= link_to 'Back', collections_path %>
</p>