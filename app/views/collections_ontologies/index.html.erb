<% @title = 'Listing Ontologies for Collection' %>

<table>
  <tr>
    <th>Collection</th>
    <th>Ontology</th>
    <th>Status</th>
  </tr>

<% @collections_ontologies.each do |collections_ontology| %>
  <tr>
    <td><%=h collections_ontology.collection %></td>
    <td><%=h collections_ontology.ontology %></td>
    <td><%=h collections_ontology.status %></td>
    <td><%= link_to 'Show', collections_ontology if permitted_to? :show, :collections_ontology %></td>
    <td><%= link_to 'Edit', edit_collections_ontology_path(collections_ontology) if permitted_to? :edit, :collections_ontology %></td>
    <td><%= link_to 'Destroy', collections_ontology if permitted_to? :edit, :collections_ontology, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New collections_ontology', new_collections_ontology_path if permitted_to? :create, :collections_ontologies %>