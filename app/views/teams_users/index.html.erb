<% @title = 'User Teams' %>

<table>
  <tr>
    <th>Team</th>
    <th>User</th>
  </tr>

<% @teams_users.each do |teams_user| %>
  <tr>
    <td><%=h teams_user.team %></td>
    <td><%=h teams_user.user %></td>
    <td><%= link_to 'Show', teams_user %></td>
    <td><%= link_to 'Edit', edit_teams_user_path(teams_user) %></td>
    <td><%= link_to 'Destroy', teams_user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

