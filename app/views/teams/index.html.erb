<% @title = 'Teams' %>

<table border=0>
  <tr>
    <th colspan=2>Name</th>
    <th colspan=2>Description</th>
    <th>Privacy</th>
    <th width=10%>&nbsp;</th>
    <th colspan=3>&nbsp;</th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td nowrap="nowrap"><%=h team.name[0,25] %><% if team.name.length > 25 %><%= "..." %><% end %></td>
    <td width=5%>&nbsp;</td>
    <td nowrap="nowrap"><%=h team.description[0,25] %><% if team.description.length > 25 %><%= "..." %><% end %></td>
    <td width=5%>&nbsp;</td>
    <td><%=h team.privacy %></td>
    <td>&nbsp;</td>
    <td><%= link_to '<img src="/images/eye.jpg" border="0">', team if permitted_to? :show, team %></td>
    <td><%= link_to '<img src="/images/delta.jpg" border="0">', edit_team_path(team) if permitted_to? :edit, team %></td>
    <td><%= link_to '<img src="/images/remove.jpg" border="0">', team if permitted_to? :delete, team, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New team', new_team_path if permitted_to? :create, :teams %>