<h1>Listing languages</h1>

<table>
  <tr>
    <th>Bibliographic code</th>
    <th>Terminologic code</th>
    <th>Digit2 code</th>
    <th>English name</th>
    <th>French name</th>
  </tr>

<% @languages.each do |language| %>
  <tr>
    <td><%=h language.bibliographic_code %></td>
    <td><%=h language.terminologic_code %></td>
    <td><%=h language.digit2_code %></td>
    <td><%=h language.english_name %></td>
    <td><%=h language.french_name %></td>
    <td><%= link_to 'Show', language %></td>
    <td><%= link_to 'Edit', edit_language_path(language) %></td>
    <td><%= link_to 'Destroy', language, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New language', new_language_path %>